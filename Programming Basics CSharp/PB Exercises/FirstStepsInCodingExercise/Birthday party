using System;

namespace Exercises
{
    class Program
    {
        static void Main(string[] args)
        {
            double rent = double.Parse(Console.ReadLine());
            double cakes = rent * 20 / 100;
            double drinks = cakes - (cakes*0.45);
            double animator = 1 / 3.0 * rent;
            double sum = rent + cakes + drinks + animator;
            Console.WriteLine(sum);


        }
    }
}